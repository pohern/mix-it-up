<%- include('../partials/header') %>
<h1 class="fontMain">Add Alcohol</h1>
<hr>
<p>Please first ensure that the Alcohol is not in the dropdown:
    <select>
        <% alcohols.forEach(function(a) { %>
            <%= alcohols %> 
            <option><%= a.name %></option>
      <% }) %>
    </select>
</p>
  <form id="add-alcohol-form" action="/alcohols" method="POST">
    <label>Alcohols:</label>
    <input type="text" name="name" placeholder="Brand...">
    <label>Alcohol Type:
        <select name="type">
            <option value="Whiskey">Whiskey</option>
            <option value="Bourbon">Bourbon</option>
            <option value="Vodka">Vodka</option>
            <option value="Gin">Gin</option>
            <option value="Tequila">Tequila</option>
            <option value="Rum">Rum</option>
          </select>
      </label><br><br>
    <input type="submit" class="btn btn-success" value="Add Alcohol">
  </form>
  <tbody><br>
          <h4 class="font4">Alcohols:</h4>
          <hr>
        <% alcohols.forEach(function(a) { %>
        <tr>
            <td>Brand: <%= a.name %></td>
            <td>Liquor: <%= a.type %></td>
            <td>
                <form action="/alcohols/<%= a._id%>?_method=DELETE" class='delete-form' method="POST">
                    <button type='submit' class="btn btn-danger">X</button>
                </form>
            </td>
        <% }) %>
      </tr>
 </tbody>

<%- include('../partials/footer') %>